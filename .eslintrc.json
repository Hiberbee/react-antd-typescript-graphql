{
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:jsx-a11y/recommended", "plugin:react/recommended"],
  "ignorePatterns": ["build", ".storybook"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": ["react-hooks", "jsx-a11y"],
  "rules": {
    "react/prop-types": "off",
    "@typescript-eslint/member-delimiter-style": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
