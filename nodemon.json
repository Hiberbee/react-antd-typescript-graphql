{
  "env": {
    "NODE_ENV": "development"
  },
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "ext": "hbs,ts,js,json",
  "ignore": [
    ".git",
    "public/scripts",
    "src/**/*.stories.*",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "watch": [
    "src/"
  ]
}
